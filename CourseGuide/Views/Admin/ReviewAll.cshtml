@model IEnumerable<CourseGuide.Models.Review>
<div asp-validation-summary="All" class="text-danger"></div>

<table class="table" style=" font-size:16px">
    <thead>
        <tr>
            <th>Услуга</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Статус</th>
            <th>Действия</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Review in Model)
        {
            <tr>
                <td>@Review.Service.ServiceName @Review.Service.EducationalInstitution.Name </td>
                <td>@Review.Title </td>
                <td>@Review.Content</td>
                <td>@Review.Status</td>

                @if(Review.Status == "Новый")
                {
                    <td>
                        <button class="btn btn-outline-success mb-3 "><a asp-action="ReviewAccept" asp-route-id="@Review.Id" style="text-decoration: none; color: black">Принять</a></button>
                        <button class="btn btn-outline-danger mb-3 "><a asp-action="ReviewDelete" asp-route-id="@Review.Id" style="text-decoration: none; color: black">Удалить</a></button>

                    </td>
                }
              
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function update1(id) {
        console.log(id);
        $.ajax({
            url: '@Url.Action("ServiceUpdate", "Admin")/' + id,
            type: 'GET',
            success: function (data) {
                $(`#upSer-${id}`).html(data);
            },
            error: function (xhr, status, error) {
                console.error("Error retrieving data: " + error);
                alert('Ошибка при получении данных. Пожалуйста, попробуйте позже.');
            }
        });

    }



</script>


