@using CourseGuide.Controllers

@{
    TempData.Keep("Name");
    TempData.Keep("Role");

}

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Hello, @User.Identity.Name!
                
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li>
                    <form asp-action="Logout" method="post" id="logoutForm" asp-controller="Account">
                        <button type="submit" class="btn btn-link text-decoration-none">Выйти</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <div >
            <a class=" btn btn-dark text-light" role="button" data-bs-toggle="button" onclick="location.href='@Url.Action("Register", "Account")'">Регистрация</a>
            <a class="btn btn-dark text-light" role="button" data-bs-toggle="button" onclick="location.href='@Url.Action("Login", "Account")'">Авторизация</a>

        </div>


  
      
    }
</ul>

                    
